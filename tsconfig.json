{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "@components": [
        "src/components"
      ],
      "@hooks": [
        "src/hooks.ts"
      ],      
      "@sass/*": [
        "src/sass/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@types": [
        "src/types.ts"
      ],
      "@utils": [
        "src/utils.ts"
      ]
    },
    "target": "es6",
    "types": []
  }
}
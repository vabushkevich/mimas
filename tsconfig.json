{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./dist/",
    "paths": {
      "@assets": ["src/assets/*"],
      "@context": ["src/context"],
      "@hooks": ["src/hooks.ts"],
      "@sass/*": ["src/sass/*"],
      "@services/*": ["src/services/*"],
      "@store/*": ["src/store/*"],
      "@types": ["src/types.ts"],
      "@utils": ["src/utils.ts"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "types": []
  }
}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "@assets": [
        "src/assets/*"
      ],
      "@components": [
        "src/components"
      ],
      "@context": [
        "src/context"
      ],
      "@hooks": [
        "src/hooks.ts"
      ],      
      "@sass/*": [
        "src/sass/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@types": [
        "src/types.ts"
      ],
      "@utils": [
        "src/utils.ts"
      ]
    },
    "target": "ESNext",
    "types": []
  }
}